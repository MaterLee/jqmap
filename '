    <script language="javascript">
        function make_table_html(id="table", row=6, col=5) {
            var data = "";
            arr = new Array();
            var k = 0
            arr[k++] = '<table id="' + id + '">'
            for(var i=0;i<=row;i++){
                    arr[k++] = "<tr>"
                    for(var j=0;j<=col;j++){
                        arr[k++] = "<td>1</td>"
                    }
                    arr[k++] = "</tr>"
            }
            arr[k++] = "</table>"
            return arr.join("");
        }
        // generate layout grids
        document.getElementById("div_layout").innerHTML = make_table_html(id="table_layout");
    </script>
</body>
